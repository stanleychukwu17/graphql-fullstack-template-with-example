    "compilerOptions": {
        "noEmit": true,
        // be explicit about types included to avoid clashing with Jest types
        "types": ["cypress"],
    },
    "exclude": [
        "../node_modules",
        "../cypress.config.ts"
    ],
    "include": [
        "../node_modules/cypress",
        "./**/*.ts"
    ]
}